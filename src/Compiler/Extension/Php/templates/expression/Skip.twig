{% extends "expr.twig" %}


{% block matching %}
{{ render_expr(expr[0], context) }}
{{ expr_comment(expr, 'result') }}
{{ result_var }} = {{ result_varname(expr[0]) }};
{%- endblock matching %}

{% block capturing %}
{{ macros.start_non_capturing(expr) }}
{{ render_expr(expr[0], context.matching()) }}
{{ expr_comment(expr, 'result') }}
{{ result_var }} = {{ result_varname(expr[0]) }};
{{ macros.end_non_capturing(expr) }}
{%- endblock capturing %}
