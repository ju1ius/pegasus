{% extends "expr.twig" %}

{% set subres_var = result_varname(expr[0]) %}


{% block matching %}
{{ render_expr(expr[0], context) }}
{{ expr_comment(expr, 'result') }}
{{ result_var }} = {{ subres_var }};
{%- endblock matching %}


{% block capturing %}
{{ result_var }} = null;
{{ pos_var }} = $this->pos;
{{ macros.start_non_capturing(expr) }}
{{ render_expr(expr[0], context.matching()) }}
{{ macros.end_non_capturing(expr) }}
{{ expr_comment(expr, 'result') }}
if ({{ subres_var }}) {
    {{ result_var }} = $this->isCapturing ? new Terminal('{{ expr.name }}', {{ pos_var }}, $this->pos, substr($this->text, {{ pos_var }}, $this->pos - {{ pos_var }})) : true;
}
{%- endblock capturing %}




