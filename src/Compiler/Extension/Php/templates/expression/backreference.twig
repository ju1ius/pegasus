{% set result_var = result_varname(expr) %}
{{ expr_comment(expr) }}
{{ result_var }} = null;
$backref = $scope['{{ expr.identifier }}'];
$length = strlen($backref);
if ($backref === substr($this->text, $this->pos, $length)) {
    $start = $this->pos;
    $end = $this->pos += $length;
    {{ result_var }} = $this->isCapturing ? new Node\Terminal('{{ expr.name }}', $start, $end, $backref) : true;
} else {
    {{ macros.error(expr)|indent }}
}
