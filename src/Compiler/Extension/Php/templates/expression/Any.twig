{% extends "expr.twig" %}
{% import "macros.twig" as h %}


{% block matching %}
if ({{ result_var }} = $this->pos < \strlen($this->source)) {
    $this->pos++;
} else {
    {{ h.failure(context.rule, expr)|indent }}
}
{%- endblock matching %}


{% block capturing %}
if ({{ result_var }} = $this->pos < \strlen($this->source)) {
    $start = $this->pos++;
    if ($this->isCapturing) {{ result_var }} = new Terminal('{{ expr.name }}', $start, $this->pos, $this->source[$this->pos]);
} else {
    {{ h.failure(context.rule, expr)|indent }}
}
{%- endblock capturing %}
