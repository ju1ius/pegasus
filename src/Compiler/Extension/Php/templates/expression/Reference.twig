{% extends "expr.twig" %}

{% set use_apply = parser_type is constant('ju1ius\\Pegasus\\Compiler\\Compiler::PARSER_EXTENDED_PACKRAT') %}

{% block matching %}
{% if use_apply -%}
    {{ result_var }} = $this->apply('{{ expr.name }}');
{%- else %}
    {{ result_var }} = $this->match_{{ expr.name }}();
{%- endif %}
{%- endblock matching %}


{% block capturing %}
{{ block('matching') }}
{%- endblock capturing %}
