{% extends "expr.twig" %}

{% set use_apply = parser_type is constant('ju1ius\\Pegasus\\Compiler\\Compiler::PARSER_EXTENDED_PACKRAT') %}

{% block matching %}
{% if use_apply -%}
{{ result_var }} = $this->apply('{{ expr.identifier }}', $bindings);
{%- else %}
{{ result_var }} = $this->match_{{ expr.identifier }}($bindings);
{%- endif %}
{%- endblock matching %}


{% block capturing %}
{{ block('matching') }}
{%- endblock capturing %}
