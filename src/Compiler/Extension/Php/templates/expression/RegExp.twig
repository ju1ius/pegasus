{% extends "expression/Match.twig" %}

{% block capturing %}
if ({{ result_var }} = (bool)preg_match({{ repr_regexp(expr.compiledPattern) }}, $this->text, $matches, 0, $this->pos)) {
    $start = $this->pos;
    $end = $this->pos += strlen($matches[0]);
    if ($this->isCapturing) {{ result_var }} = new Terminal('{{ expr.name }}', $start, $end, $matches[0], ['groups' => $matches]);
} else {
    {{ macros.error(context.rule, expr)|indent }}
}
{% endblock capturing %}
