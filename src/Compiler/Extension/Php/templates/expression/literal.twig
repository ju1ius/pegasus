{% set result_var = result_varname(expr) %}
{% set literal = repr(expr.literal) %}
// Literal: {{ expr }}
if (substr($this->text, $this->pos, {{ expr.length }}) === {{ literal }}) {
    {{ result_var }} = new Node\Terminal('{{ expr.name }}', $this->pos, $this->pos + {{ expr.length }}, {{ literal }});
    $this->pos += {{ expr.length }};
} else {
    {{ macros.error(expr)|indent }}
}
